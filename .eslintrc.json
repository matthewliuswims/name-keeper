{
    "env": {
        "node": true,
        "browser": true, 
        "es6": true,
        "jest": true
    },
    "parser": "babel-eslint",
    "extends": "airbnb",
    "rules": {
        "react/jsx-filename-extension": "off",
        "Unexpected usage of singlequoteextension": "off",
        "react/jsx-equals-spacing": "off",
        "react/destructuring-assignment": "off",
        "jsx-quotes": "off",
        "react/prefer-stateless-function": "off", // for now only
        "react/prop-types": "off", // for now only too hopefully
        "react/jsx-one-expression-per-line": "off",
        "object-curly-newline": "off"
    }
}